<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.ka.jamit.tcalc.ui.home.HomeViewModel" />

    </data>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways" />

            <TextView
                android:id="@+id/timespanSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{()->viewModel.onUserClicked()}"
                android:text="@{viewModel.userText}" />

        </com.google.android.material.appbar.AppBarLayout>

        <de.ka.jamit.tcalc.utils.AutoReleaseRecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/resultContainer"
            android:layout_below="@+id/appbar"
            app:adapter="@{viewModel.adapter}"
            app:layoutManager="@{viewModel.layoutManager()}" />

        <de.ka.jamit.tcalc.utils.EmptyViewLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/resultContainer"
            android:layout_below="@+id/appbar"
            app:setInfoImageResourceId="@{viewModel.emptyViewImageRes}"
            app:setInfoText="@{viewModel.emptyViewText}"
            app:show="@{viewModel.showEmptyView}" />


        <RelativeLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_86"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/navBarHeight"

            >


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/sumText"
                android:layout_centerHorizontal="true"
                android:visibility="@{viewModel.loadingVisibility}" />

            <TextView
                android:id="@+id/sumText"
                style="@style/textDefault.bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_54"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/defaultBackgroundSecondary"

                android:gravity="center"
                android:text="@{viewModel.resultText}"
                tools:text="monthly: 12, yearly: 20" />

            <Button
                android:id="@+id/addButton"
                style="@style/ButtonStyle.Bordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:layout_marginBottom="@dimen/default_24"
                android:onClick="@{()->viewModel.onAddClicked()}"
                android:text="add" />

        </RelativeLayout>
    </RelativeLayout>
</layout>
